<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
    
    <constant name="struts.devMode" value="true" />

    <package name="basicstruts2" extends="struts-default" namespace="/">
        <global-results>
            <result name="input">/login.jsp</result>
        </global-results>
        <action name="validarLogin" class="es.ubu.alu.mydatabasejc.actions.LoginAction" method="validarLogin">
            <result name="error">/login.jsp</result>
            <result>/inicial.jsp</result>
        </action>
        <action name="login" class="es.ubu.alu.mydatabasejc.actions.LoginAction" method="login">
            <result name="error">/login.jsp</result>
            <result type="redirectAction">
                <param name="actionName">inicial</param>
                <param name="namespace">/consulta</param>
                <param name="parse">false</param>
            </result>
        </action>
        <action name="logear" class="es.ubu.alu.mydatabasejc.actions.LoginAction" method="logear">
            <result type="redirectAction">
                <param name="actionName">inicial</param>
                <param name="namespace">/consulta</param>
                <param name="parse">false</param>
            </result>
        </action>
    </package>

    <package name="consulta" extends="struts-default" namespace="/consulta">
        <global-results>
            <result name="input">/login.jsp</result>
        </global-results>
        <action name="inicial" class="es.ubu.alu.mydatabasejc.actions.ConsultaAction" method="inicial">
            <result>/inicial.jsp</result>
        </action>
        <action name="resultset" class="es.ubu.alu.mydatabasejc.actions.ConsultaAction" method="resultset">
            <result>/resultset.jsp</result>
            <result name="error">/resultset.jsp</result>
        </action>
    </package>
